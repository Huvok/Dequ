<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fb="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              tools:ignore="NestedWeights"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="sunfire.dequ.MainActivity"
              android:id="@+id/viewMainActivity"
              android:weightSum="1"
              android:background="@color/trythreeColor">

        <TextView
            android:id="@+id/txtViewReportTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".07"
            android:ems="10"
            android:gravity="center"
            android:text="@string/info_report_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@color/tryColor"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:ems="10"
            android:gravity="center"
            android:text="Type:"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:background="@color/trytwoColor"/>

        <TextView
            android:id="@+id/txtViewReportInfoType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:ems="10"
            android:text="@string/info_report_type"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:background="@color/trytwoColor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtViewReportInfoLevelTag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ems="10"
            android:gravity="center"
            android:text="Level:"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:background="@color/trytwoColor"/>

        <TextView
            android:id="@+id/txtViewReportInfoLevel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="22sp"
            android:text="@string/info_report_level"
            android:textColor="@android:color/black"
            android:background="@color/trytwoColor"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewReportInfoDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:ems="10"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="@string/info_report_description"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight=".1">
        </LinearLayout>

        <ImageView
            android:id="@+id/imgViewReport"
            android:layout_width="0dp"
            android:layout_height="279dp"
            app:srcCompat="@android:drawable/btn_star"
            android:layout_weight="0.80"/>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:orientation="horizontal"
                  tools:context="sunfire.dequ.MainActivity"
                  android:layout_weight=".13"
                  android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="match_parent">
        </LinearLayout>

        <Button
            android:id="@+id/btnCancelFbEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:text="@string/btn_cancel_event"
            android:drawableTop="@drawable/ic_cancel_black_24px"
            android:backgroundTint="@color/cancelColor" />

        <Button
            android:id="@+id/btnCreateFbEvent"
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="match_parent"
            android:text="@string/btn_create_event"
            android:drawableTop="@drawable/ic_event_calendar"
            android:backgroundTint="@color/cancelColor"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="match_parent">
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
