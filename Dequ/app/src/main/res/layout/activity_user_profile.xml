<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NestedWeights"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sunfire.dequ.MainActivity"
    android:id="@+id/viewMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            tools:context="sunfire.dequ.MainActivity"
            android:weightSum="1"
            android:background="@color/emeraldColor">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                tools:context="sunfire.dequ.MainActivity"
                android:layout_weight="1"
                android:weightSum="1">

                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/profilePicture"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".2"
                    android:gravity="center_horizontal"
                    fb:com_facebook_preset_size="normal"/>

                <TextView
                    android:id="@+id/txtViewUserName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:text="@string/user_name"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtViewUserLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:paddingLeft="10dp"
            android:text="@string/user_level"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtViewUserExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:paddingLeft="10dp"
            android:text="@string/user_xp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:paddingLeft="10dp"
            android:text="@string/my_event"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/scrollViewMyEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".27">


        </LinearLayout>

        <TextView
            android:id="@+id/txtViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:paddingLeft="10dp"
            android:text="@string/other_event"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <ScrollView
            android:id="@+id/scrollViewOtherEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".27">


        </ScrollView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".03"
            android:weightSum="1">

            <Button
                android:id="@+id/btnCancelUserProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="@string/cancel_button"/>

            <Button
                android:id="@+id/btnLogOutUserProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="@string/logout_button"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>